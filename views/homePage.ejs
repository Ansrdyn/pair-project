<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <a href="/profile/<%=data.id%>/addPost"><button>Add Post</button></a>
    <table border="1">
        <tr>
            <th>Name Profile</th>
            <th>Content</th>
            <th>Date Posted</th>
            <th>Action</th>
        </tr>
        <% post.forEach(el => { %>
        <tr>
            <td><a href="/profile/<%= el.Profile.id %> "><%= el.Profile.name %></a></td>
            <td><%= el.content %></td>
            <td><%= el.createdAt.toISOString().split('T')[0] %></td>
            <td>
                <button>Like</button>
                <a href="#"><button>Delete</button></a>
            </td>
        </tr>
        <% }); %> 
    </table>

</body>
</html>